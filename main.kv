#:kivy 2.0.0

<Interface>:
    orientation: 'horizontal'
    Widget:
        size_hint_x: 0.4
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.6
        canvas.before:
            Color:
                rgba: 1, 0, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            size_hint_y: 0.5
            text: 'Marketing text here'
            font_size: 56
            pos_hint: {'center_x': .5, 'center_y': .5}
        BoxLayout:
            size_hint_y: 0.5
            padding: 80
            spacing: 80
            Button:
                size_hint_y: .3
                text: 'social1'
                font_size: 48
            Button:
                size_hint_y: .3
                text: 'social1'
                font_size: 48


