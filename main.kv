#:kivy 2.0.0

<Interface>:
    orientation: 'horizontal'
    ImageWithConfig:
        size_hint_x: 0.4
        id: image_promo
        pos: self.pos
        size: self.size
        allow_stretch: True
        keep_ratio: False
        source: self.check_path_promo()
    ImageWithConfig:
        size_hint_x: .6
        id: image_bg
        pos: self.pos
        size: self.size
        allow_stretch: True
        keep_ratio: False
        source: self.check_path_bg()
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: image_bg.size
            pos: image_bg.pos
            padding: [32,32,32,32]
            LabelWithConfig:
                id: title_main
                markup: True
                size_hint_y: 0.7
                text_size: self.size
                size: self.texture_size
                bold: True
                padding_x: 56
                text: '{}' .format(self.check_title())
                font_size: '52sp'
                outline_width: 1
                outline_color: (0,0,0)
                halign: 'center'
                valign: 'middle'
            BoxLayout:
                size_hint_y: 0.3
                spacing: 50
                padding: [0,40,0,40]
                Widget:
                    size_hint_x: .1
                SocialButton:
                    id: btn_inst
                    on_press: self.open_link_inst()
                    pos_hint: {'center_x': 0.3 , 'center_y': .5}
                    canvas.before:
                        Color:
                            rgba: (240/255,0/255,115/255,1)
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [16,]
                    SocialStackLayout:
                        spacing: 40
                        Image:
                            source: 'images/social/instagram/inst_white_icn.png'
                            size_hint_x: None
                            size: 40, 40
                        Label:
                            size_hint_x: None
                            width: 90
                            text: "Instagram"
                            font_size: 32
                            bold: True
                            color: 1,1,1,1
                SocialButton:
                    id: btn_vk
                    on_press: self.open_link_vk()
                    pos_hint: {'center_x': 0.7 , 'center_y': .5}
                    canvas.before:
                        Color:
                            rgba: (24/255,119/255,242/255,1)
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [16,]
                    SocialStackLayout:
                        spacing: 40
                        Image:
                            source: 'images/social/vkontakte/vk_icn.png'
                            size_hint_x: None
                            size: 40, 40
                            allow_stretch: False
                            keep_ratio: True
                        Label:
                            bold: True
                            size_hint_x: None
                            width: 90
                            text: "Vkontakte"
                            font_size: 32
                            color: 1,1,1,1
                Widget:
                    size_hint_x: .1


<SocialButton>:
    markup: True
    background_color: 1,1,1,0
    background_normal: ''
    size_hint: None , None
    size: 480, 100

<SocialStackLayout@BoxLayout>:
    orientation: 'horizontal'
    pos: self.parent.pos
    size: self.parent.size
    padding: [124, 24, 124, 24]