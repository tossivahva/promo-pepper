<SocialButton>:
    markup: True
    background_color: 1,1,1,0
    background_normal: ''
    size_hint_y: None
    size: self.texture_size
    height: 100
<SocialStackLayout@BoxLayout>:
    orientation: 'horizontal'
    pos: self.parent.pos
    size: self.parent.size